<%- include("../../../partials/header.ejs") %>
<%- include("../../../partials/nav.ejs") %>
<link href="/css/theme/<%= preferredTheme %>/form.css?v=<%= cssVersion %>" media="screen, print" rel="stylesheet" /><link rel="stylesheet" data-name="vs/editor/editor.main" href="/packages/monaco-editor/min/vs/editor/editor.main.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous" async></script><% - include("../../../partials/nav.ejs") %>
<section class="hero is-black">
    <div class="hero-body">
        <br />
        <div class="container has-text-centered">
            <h1 class="title">
                <span class="icon is-medium iconalign">
                    <i aria-hidden="true" class="fad fa-<%= icon %> has-text-default"></i>
                </span>
                <br />
                <span><%= title %></span>
            </h1>
            <h2 class="subtitle">
                <%= subtitle %>
            </h2>
        </div>
    </div>
</section>
<div class="container">
    <div class="section">
        <form method="POST">
            <div class="field">
                <label class="label has-text-default"><%= __("common.reason") %> <span class="has-text-danger">*</span></label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input is-rounded" type="text" id="reason" name="reason" placeholder="<%= __("page.remove.servers.placeholder") %>">
                    <span class="icon is-small is-left">
                        <i aria-hidden="true" class="fas fa-comment-dots"></i>
                    </span>
                </p>
            </div>
            <br />
            <div class="field">
                <label class="label has-text-default"><%= __("page.remove.premadeReasons") %></label>
                <div class="buttons">
                    <button type="button" onclick="innapAvatarName();" class="button is-dark">
                        <span><%= __("page.remove.premadeReasons.inappropriate") %></span>
                    </button>
                    <button type="button" onclick="discordTosViolation();" class="button is-dark">
                        <span><%= __("page.remove.premadeReasons.discord.tos") %></span>
                    </button>
                    <button type="button" onclick="tosViolation();" class="button is-dark">
                        <span><%= __("page.remove.premadeReasons.del.tos") %></span>
                    </button>
                    <button type="button" onclick="notLGBT();" class="button is-dark">
                        <span><%= __("page.remove.premadeReasons.notLGBT") %></span>
                    </button>
                    <button type="button" onclick="invalidInvite();" class="button is-dark">
                        <span><%= __("page.remove.premadeReasons.invalidInvite") %></span>
                    </button>
                </div>
            </div>
            <br />
            <div class="field is-grouped">
                <div class="buttons">
                    <button class="button is-success">
                        <span class="icon"><i aria-hidden="true" class="fas fa-check-circle"></i></span>
                        <span><%= __("common.submit") %></span>
                    </button>
                    <a class="button is-danger" href="<%= linkPrefix %>/servers/<%= removingServer._id %>">
                        <span class="icon"><i aria-hidden="true" class="fas fa-times-circle"></i></span>
                        <span><%= __("common.cancel") %></span>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function innapAvatarName() {
        document.getElementById("reason").value = "This server contains an inappropriate avatar and/or name!";
    }
    function discordTosViolation() {
        document.getElementById("reason").value = "Violating Discord's Terms of Use.";
    }
    function tosViolation() {
        document.getElementById("reason").value = "Violating our Terms of Use.";
    }
    function notLGBT() {
        document.getElementById("reason").value = "This server does not appear to be an LGBT server, so we do not accept it to our LGBT server site.";
    }
    function invalidInvite() {
        document.getElementById("reason").value = "The server's invite has expired.";
    }
</script>
<%- include("../../../partials/footer.ejs") %>
